{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "@zerocancer/shared/*": ["../../packages/shared/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "references": [
    { "path": "../../packages/shared" }
  ]
}
